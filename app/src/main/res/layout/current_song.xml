<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#020017">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_text"
        android:text="Song"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:paddingTop="40dp"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/cover"
        android:src="@drawable/oneokrock"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/song_text"
        android:layout_marginTop="20dp"
        android:padding="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_title"
        android:text="Vandalize"
        android:textSize="40dp"
        android:letterSpacing=".2"
        android:layout_below="@+id/cover"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_author"
        android:text="ONE OK ROCK"
        android:textSize="25dp"
        android:layout_below="@id/song_title"
        android:textColor="#808080"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progress_bar"
        android:layout_below="@id/song_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_centerHorizontal="true"
        android:progressBackgroundTint="@color/white"
        android:progress="15"
        android:progressTint="@color/white"/>

    <LinearLayout
        android:id="@+id/times_region"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/current_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:text="01:15"
            android:textColor="#808080"/>

        <TextView
            android:id="@+id/whole_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:text="03:45"
            android:textColor="#808080"/>
    </LinearLayout>

</RelativeLayout>