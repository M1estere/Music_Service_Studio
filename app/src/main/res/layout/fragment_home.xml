<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/good_morning_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Morning"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/morning_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_morning_txt"
            android:layout_centerHorizontal="true"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:rowCount="3">

            <Button
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:gravity="fill_vertical"
                android:minHeight="75dp" />

            <Button
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/white"
                android:gravity="fill_vertical"
                android:minHeight="75dp" />

            <Button
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:gravity="fill_vertical"
                android:minHeight="75dp" />

            <Button
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:gravity="fill_vertical"
                android:minHeight="75dp" />

            <Button
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:gravity="fill_vertical"
                android:minHeight="75dp" />

            <Button
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                android:gravity="fill_vertical"
                android:minHeight="75dp" />

        </GridLayout>

        <TextView
            android:id="@+id/recommendations_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/morning_region"
            android:layout_marginTop="15dp"
            android:text="Recommendations"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recom_rec_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recommendations_txt"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/pop_choice_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recom_rec_view"
            android:text="Popular Choice"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pop_choice_rec_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_choice_txt"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" />

    </RelativeLayout>

</FrameLayout>